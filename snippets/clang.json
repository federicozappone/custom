{
  "clangd": {
    "prefix": "clangd",
    "body": [
      "CompileFlags:",
      "  Add: [-Wall, -std=c++17, -Wdocumentation]"
    ],
    "description": ".clangd template"
  },

  "clang-format": {
    "prefix": "clang-format",
    "body": [
      "---",
      "BasedOnStyle: Google",
      "IndentWidth: 2",
      "---",
      "Language: Cpp",
      "",
      "DerivePointerAlignment: false",
      "PointerAlignment: Left",
      "AccessModifierOffset: -2",
      "",
      "ColumnLimit: 100",
      "SortIncludes: false",
      "",
      "BraceWrapping:",
      "  AfterClass:      true",
      "  AfterControlStatement: true",
      "  AfterEnum:       true",
      "  AfterFunction:   true",
      "  AfterNamespace:  false",
      "  AfterObjCDeclaration: true",
      "  AfterStruct:     true",
      "  AfterUnion:      true",
      "  BeforeCatch:     true",
      "  BeforeElse:      true",
      "  IndentBraces:    false",
      "BreakBeforeBraces: Custom",
      "---"
    ],
    "description": ".clang-format template"
  }
}
